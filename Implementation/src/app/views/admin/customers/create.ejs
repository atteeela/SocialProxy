<section>
    <header>
	    <h1>Einen neuen Kunden anlegen</h1>

	    <p>Hier steht ein Beschreibungstext.</p>
	</header>
	<% if (flash) { %>
		<% if (flash.error) { %>
			<% flash.error.forEach(function (message) { %>
				<p class="alert alert-error"><%= message %></p>
			<% }); %>
		<% } %>
	<% } %>
	<form class="form-horizontal" action="/admin/customers/create" method="post">
	    <fieldset>
	        <legend>Allgemein</legend>

	    	<div class="control-group">
	    		<% var name = name || ""; %>
	      	    <label class="control-label" for="name">Name:</label>

	      	    <div class="controls">
	      	    	<% var name = name || ""; %>
	        	    <input type="text" class="input-xlarge" name="name" id="name" value="<%= name %>">
	        	    
	        	    <p class="help-block">Der volle Name des Kunden. Aus diesem wird im Anschluss auch die eindeutige Identifikation generiert.</p>
	      	    </div>
	        </div>
	 	</fieldset>

	    <fieldset>
	        <legend>Twitter</legend>

	        <div class="control-group">
	        	<% var twitterId = twitterId || ""; %>
	      	    <label class="control-label" for="twitterId">Username</label>

	      	    <div class="controls">
		      		<div class="input-prepend">
		      		     <span class="add-on">@</span><input class="span2" id="twitterId" name="twitterId" size="16" type="text" value="<%= twitterId %>">
		      		</div>
		        	
		        	<p class="help-block">Möchtest du den Twitter-Service für diesen Kunden NICHT aktivieren, so lasse dieses Feld einfach leer.</p>
	        	</div>
	      	</div>
	    </fieldset>

	    <fieldset>
	        <legend>Facebook</legend>

	        <div class="control-group">
	        	<% var facebookId = facebookId || ""; %>
	      	    <label class="control-label" for="facebookId">ID des Profils:</label>

	      	    <div class="controls">
		      		<div class="input-prepend">
		      		    <input class="input-medium" id="facebookId" name="facebookId" type="text" value="<%= facebookId %>">
		      		</div>
		        	
		        	<p class="help-block">Möchtest du den Facebook-Service für diesen Kunden NICHT aktivieren, so lasse dieses Feld einfach leer.</p>
	        	</div>
	      	</div>
	    </fieldset>

		<div class="form-actions">
			<input class="btn btn-primary icon-ok" type="submit" value="Speichern" />
			<a class="btn" href="/admin/customers"><i class="icon-ban-circle"></i> Abbrechen</a>
		</div>
	</form>
</section>